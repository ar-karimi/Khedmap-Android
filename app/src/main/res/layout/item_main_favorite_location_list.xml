<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="0.7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            fontPath="IRANSansMobileFonts/IRANSansMobile(FaNum)_Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="خانه"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12ssp"
            tools:ignore="HardcodedText,MissingPrefix" />

        <TextView
            android:id="@+id/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="شریعتی"
            android:textColor="#333333"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_button"
                fontPath="IRANYekanMobileFonts/IRANYekanMobile(FaNum)_Medium.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.498"
                android:background="#F7F7F7"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="ویرایش"
                android:textColor="#888888"
                android:textSize="@dimen/_11ssp"
                tools:ignore="HardcodedText,MissingPrefix,NestedWeights,RtlHardcoded,UnusedAttribute" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/remove_button"
                fontPath="IRANYekanMobileFonts/IRANYekanMobile(FaNum)_Medium.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.498"
                android:background="#F7F7F7"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="حذف"
                android:textColor="#888888"
                android:textSize="@dimen/_11ssp"
                tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>