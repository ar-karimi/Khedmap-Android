<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_8sdp">

    <TextView
        android:id="@+id/additional_service_title"
        fontPath="IRANSansMobileFonts/IRANSansMobile(FaNum)_Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خدمت اضافی: "
        android:textColor="#4D4D4D"
        android:textSize="@dimen/_11ssp"
        tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded" />

    <TextView
        android:id="@+id/additional_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="20000"
        android:textSize="@dimen/_11ssp"
        tools:ignore="HardcodedText,RtlHardcoded" />

</LinearLayout>